<%= simple_form_for @study do |form| %>
  <%= form.error_notification %>

  <%= form.input :name, required: true %>
  <%= form.input :description, required: true %>
  <%= form.input :url %>
  <%= form.input :visibility, collection: Study.visibilities.collect { |tuple| [tuple[1], tuple[0]] }, include_blank: false %>

  <%= form.button :submit, class: "btn-primary" %>
<% end %>
